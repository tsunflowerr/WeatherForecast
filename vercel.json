{
  "version": 2,
  "builds": [
    { 
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**"]
      }
    },
    { 
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}